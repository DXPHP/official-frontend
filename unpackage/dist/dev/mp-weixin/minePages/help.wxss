/* 胶囊*/
.tn-custom-nav-bar__back.data-v-3d0e04ed {
  width: 60%;
  height: 100%;
  position: relative;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, 0.15);
  border-radius: 1000rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  color: #FFFFFF;
  font-size: 18px;
}
.tn-custom-nav-bar__back .icon.data-v-3d0e04ed {
  display: block;
  flex: 1;
  margin: auto;
  text-align: center;
}
/* 间隔线 start*/
.tn-strip-bottom-min.data-v-3d0e04ed {
  width: 100%;
  border-bottom: 1rpx solid #F8F9FB;
}
.tn-strip-top.data-v-3d0e04ed {
  width: 100%;
  border-top: 20rpx solid rgba(241, 241, 241, 0.8);
}
/* 间隔线 end*/
/* 毛玻璃*/
.dd-glass.data-v-3d0e04ed {
  width: 100%;
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
}
/* 用户头像 start */
.user-image.data-v-3d0e04ed {
  width: 90rpx;
  height: 90rpx;
  position: relative;
}
.user-pic.data-v-3d0e04ed {
  background-size: cover;
  background-repeat: no-repeat;
  background-position: top;
  border-radius: 50%;
  overflow: hidden;
  background-color: #FFFFFF;
}
/* 底部悬浮按钮 start*/
.tn-tabbar-height.data-v-3d0e04ed {
  min-height: 120rpx;
  height: calc(140rpx + env(safe-area-inset-bottom) / 2);
  height: calc(140rpx + constant(safe-area-inset-bottom));
}
.tn-footerfixed.data-v-3d0e04ed {
  position: fixed;
  background-color: rgba(255, 255, 255, 0.5);
  box-shadow: 0rpx 0rpx 30rpx 0rpx rgba(0, 0, 0, 0.07);
  bottom: 0;
  width: 100%;
  transition: all 0.25s ease-out;
  z-index: 100;
}

